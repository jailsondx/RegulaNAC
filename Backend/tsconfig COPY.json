{
  "compilerOptions": {
    "target": "ES6",          // Mantenha ou atualize para uma vers√£o mais recente, como "ES2020"
    "module": "ESNext",       // Mude para "ESNext" ou "ES6"
    "moduleResolution": "node", // Mantenha como "node" para compatibilidade com Node.js
    "outDir": "./dist",
    "rootDir": "src TYPESCRIPT",
    "strict": true,
    "esModuleInterop": true,  // Mantenha como true para compatibilidade com CommonJS
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src TYPESCRIPT/**/*.ts"],    // Certifique-se de incluir apenas os arquivos TypeScript
  "exclude": ["node_modules"]
}